<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/list_item_skill_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            style="@style/ListItem"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textView_proficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Proficiency:"
                style="@style/ListItem"
                />

            <TextView
                android:id="@+id/list_item_skill_proficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView_proficiency"
                android:text="2"
                style="@style/ListItem"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/list_item_skill_proficiency"
                android:layout_marginLeft="0dp"
                android:text="/ 10"
                style="@style/ListItem"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/list_item_skill_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2.5dp"
            android:text="@string/lorem_ipsum"
            style="@style/ListItem"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>